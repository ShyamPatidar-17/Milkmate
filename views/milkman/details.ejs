<%- include('../includes/navbar.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../css/dairy/showCustomer.css">
</head>
<body>
    <div class="container">
        <h1> Dairy Details</h1>
        <div class="customer-details">
            <table class="contact-table">
                <thead>
                    <tr>
                        <th>Milkman Code</th>
                        <th>Milkman Name</th>
                        <th>Milkman Contact</th>
                        <th>Milkman Email</th>
                        <th>Milkman Address</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                        <td>  <%=dairyDetails.milkmanCode%></td>
                         <td>   <%= dairyDetails.name%></td>
                         <td><%=dairyDetails.contact%></td>
                         <td><%=dairyDetails.email%></td>
                         <td><%=dairyDetails.address%></td>
                         </tr>
                    
                </tbody>
            </table>
        
    <h1>Milk Details</h1>
<div class="customer-details">
    <table class="contact-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Shift</th>
                <th>Liter</th>
                <th>Rate (  &#8377 / ltr )</th>
                <th>Amount</th>
                <th>Total Milk</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
                <% for(detail of details) {%>
                <tr>
                    <td>  <%=detail.date.toDateString()%></td>
                 <td>   <%=detail.shift %></td>
                 <td>   <%= detail.liter%></td>
                 <td><%=detail.rate%></td>
                 <td>    &#8377;  <%= detail.amount%></td>
                 <td><%= totalmilk +=detail.liter%></td>
                 <td> &#8377;  <%=total+=detail.amount%></td>
                 </tr>
            <%}%>
        </tbody>
    </table>
    <h1>Total Liters of Milk collected = <%=totalmilk%> ltrs</h1>
    <h1>Total Amount Paid  = <b> &#8377 <%=total%></b></h1>

    <form action="/milkman/delete" method="post">
        <input type="hidden" name="dairy[code]" value="<%=dairyDetails.milkmanCode%>">
        <button type="submit" class="pay-btn">Clear</button>
    </form>

    <%- include('../includes/footer.ejs') %>
</body>
</html>