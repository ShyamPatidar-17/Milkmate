        <h1>Customer Details</h1>
        <!-- Customer Info Form -->
            <div class="customer-details">
                    <table class="contact-table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Dairy Code</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Contact</th>
                                <th>Address</th>
                                <th>Edit</th>
                                <th>Delete</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%=customer.code%></td>
                                <td><%=customer.codeD%></td>
                                <td><%=customer.first%></td>
                                <td><%=customer.last%></td>
                                <td><%=customer.contact %></td>
                                <td><%=customer.address %></td>
                                <td><a href="/customers/<%=customer._id%>/edit"><button class="edit-btn">Edit</button></a></td>
                                <td><form method="POST" action="/customers/<%=customer._id%>?_method=delete">
                                <button class="del-btn">Delete</button>
                                </form></td>
                            </tr>
                        </tbody>
                    </table>
<!-- customer Milk info -->
 <h1>Milk Details</h1>

<div class="customer-details">
    <table class="contact-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Shift</th>
                <th>Liter</th>
                <th>Rate (  &#8377 / ltr )</th>
                <th>Amount</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
                <% for(milk of milk) { %>  
                <tr>  
                 <td>  <%=milk.date.toDateString()%></td>
                 <td>   <%=milk.shift %></td>
                 <td>   <%= milk.liter%></td>
                 <td><%=milk.rate%></td>
                 <td>    &#8377;  <%= milk.amount%></td>
                 <td> &#8377;  <%=total+=milk.amount%></td>
                 </tr>
            <% }; %>
        </tbody>
    </table>
    <h1>Total amount to be paid till Date = <b> &#8377 <%=total%></b></h1>
    <form action="/dairy/pay" method="post"> 
        <input type="hidden" name="pay[code]" id="code" value="<%=customer.code%>">
    <button type="submit" class="pay-btn">PayNow</button>  
</form>
</div>
    </div>

    <%- include('../includes/footer.ejs') %>
</body>
</html>
